<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightGrey"
    android:orientation="vertical"
    android:padding="25dp"
    tools:context=".Activities.AddPhotosActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnBackPhotos"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onPhotosClick"
            android:backgroundTint="@color/teal_200"
            android:src="@drawable/ic_baseline_arrow_back_24"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Foto hinzufügen"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="@color/black"/>
        <ImageButton
            android:id="@+id/btnSavePhotos"
            android:layout_width="60dp"
            android:onClick="onPhotosClick"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/teal_200"
            android:src="@drawable/ic_baseline_save_24"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="25dp"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnCamera"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onPhotosClick"
            android:backgroundTint="@color/teal_200"
            android:src="@drawable/camera"
            />
        <ImageButton
            android:id="@+id/btnGallery"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onPhotosClick"
            android:backgroundTint="@color/teal_200"
            android:src="@drawable/gallery"
            />
        <ImageButton
            android:id="@+id/btnClearPhotos"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:onClick="onPhotosClick"
            android:backgroundTint="@color/red"
            android:src="@drawable/ic_baseline_close_24"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/currentSize"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Momentane Größe: 0 / 24 megabyte"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtBox"
        android:orientation="vertical"/>
    </ScrollView>
</LinearLayout>